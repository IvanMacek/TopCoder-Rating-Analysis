@using TopCoder.Analysis.Data
@model IEnumerable<RoundResult>
@{
}

@if (Model.Any())
{
    <p></p>
    <table>
        <thead>
            <tr>
                <th> Row count: </th>  
                <th> @Model.Count() </th>  
            </tr>
            <tr>
                <th> Round </th>  
                <th> Div </th>  
                <th> Div Coders </th>  
                <th> Rank </th>  
                <th> Relative Rank </th>  
                <th> Points </th>  
                <th> Rated Rounds </th>  
                <th> TC Volatility </th>  
                <th> TC Old </th>  
                <th> TC New </th>  
                <th> TC Diff </th>  
                <th> ELO Old </th>  
                <th> ELO New </th>  
                <th> ELO Diff </th>  
            </tr>
        </thead>

        <tbody>
        @foreach (var rr in Model)
        {
            var divCodersCount = (rr.Division == 1) ? rr.Round.DivOneCodersCount : rr.Round.DivTwoCodersCount;
            var relativePlace = 100.0 * rr.DivisionPlace / divCodersCount;
                
            <tr @(rr.IsRated ? string.Empty : @"class=""ui-state-disabled""")>
                
                <td> @rr.Round.Name <br /> @rr.Round.Date.ToShortDateString() </td>
                <td> @rr.Division </td>
                <td> @divCodersCount </td>
                <td> @rr.DivisionPlace </td>
                <td> @relativePlace.ToString("0.##") % </td>
                <td> @rr.Points </td>
                <td> @rr.NumberOfRatings</td>
                <td class="rating"> @rr.Tc_NewVolatility </td>
                <td class="rating"> @rr.Tc_OldRating </td>
                <td class="rating"> @rr.Tc_NewRating </td>
                <td class="@(rr.Tc_RatingDiff >= 0 ? "good" : "bad")"> @rr.Tc_RatingDiff </td>
                <td class="rating"> @rr.Elo_OldRating </td>
                <td class="rating"> @rr.Elo_NewRating </td>
                <td class="@(rr.Elo_RatingDiff >= 0 ? "good" : "bad")"> @rr.Elo_RatingDiff </td>

            </tr>
        }   
        </tbody>
    </table> 
}
else
{
    <p> List is empty. </p>
}